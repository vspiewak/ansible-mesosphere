{
    "checks": {
    {% for host in groups[mesos_master_group] %}
        "check-mesos-master-{{loop.index}}": {
          "command": "/etc/sensu/plugins/check-mesos.rb -s {{ hostvars[host].ec2_ip_address }} -m master",
          "subscribers": [
            "mesos"
          ],
          "interval": 60
        }
      {% if not loop.last %},{% endif %}
    {% endfor %}
    ,
    {% for host in groups[mesos_slave_group] %}
        "check-mesos-slave-{{loop.index}}": {
          "command": "/etc/sensu/plugins/check-mesos.rb -s {{ hostvars[host].ec2_ip_address }} -m slave",
          "subscribers": [
            "mesos"
          ],
          "interval": 60
        }
      {% if not loop.last %},{% endif %}
    {% endfor %}
    }
}